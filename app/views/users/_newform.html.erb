<h1>Sign Up for an Account in Particifind!</h1>
<%= form_for user do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<br />
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br />
	<%= f.label :field %>
	<%= f.text_field :field %>
	<br />
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br />
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br />
<%= f.submit "Submit" %>
<% end %>