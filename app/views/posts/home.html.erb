
<div class="homecontainer">
	<header><h1>Welcome to Particifind!</h1></header>
<section id="leftbar">
	
	**OPTIONS FOR FILTER
</section>

<section id="content">

	<% @posts.each do |p| %>
	<article>
	<h4 id="studytitle"><%= p.title%></h4><br/>
	<h2 id="title">Field:</h2><%= p.field%><br/>
	<h2 id="title">Study Description:</h2> <%= p.description%><br/>
	<h2 id="title">Study Duration</h2><%= p.begin_date%> to <%= p.end_date%><br/>
	<h2 id="title">Participants Needed:</h2> <%= p.participants_wanted%><br/>
	<h2 id="title">Criteria:</h2><br/>
	<h2 id="title">Age:</h2> <%= p.age%><br/>
	<h2 id="title">Gender:</h2> <%= p.gender%><br/>
	
	<h2 id="title">Compensation:</h2> <%= p.compensation%><br/>
	<h2 id="title">Study duration:</h2> <%= p.time_needed%><br/>
	<h2 id="title">Posted:</h2> <%= p.created_at%><br/>
	
	</article>
	<% end %>
</section>
</div>