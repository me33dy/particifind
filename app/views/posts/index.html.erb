<h1></h1>
<%
=begin %>
<% @posts.each do |p| %>
	<%= p.title %> <%= link_to "Edit post", edit_post_path(p) %> <%= link_to "Delete this post", post_path(p), method: :delete %>
	<% end %>
<% 
=end %>



<div  class="userContainer" ng-app="postsApp" ng-controller="userPostsController">
	<div class="large-3 columns homeDiv" id="userInfo">


	</div>

	<div class="large-8 columns">
		<div class="article homeDiv" ng-repeat="p in userPosts">
			<div id="postDate">date</div>
			<h4 class="postTitle">{{ p.title}}</h4><br/>
			<h2 class="postText">Field:</h2>{{ p.field}}<br/>
			<h2 class="postText">Study Description:</h2> {{ p.description}}<br/>
			<h2 class="postText">Study Duration</h2>{{ p.begin_date}} to {{ p.end_date}}<br/>
			<h2 class="postText">Participants Needed:</h2> {{ p.participants_wanted}}<br/>
			<h2 class="postText">Criteria:</h2><br/>
			<h2 class="postText">Gender:</h2> {{ p.gender}}<br/>
			
			<h2 class="postText">Compensation:</h2> {{ p.compensation}}<br/>
			<h2 class="postText">Study duration:</h2> {{ p.time_needed}}<br/>
			<h2 class="postText">Posted:</h2> {{ p.created_at}}<br/>
		</div>
	</div>

</div>